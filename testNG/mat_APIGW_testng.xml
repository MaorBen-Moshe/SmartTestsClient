<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Minimal Acceptance Testing" parallel="tests" thread-count="10"><!-- 20220516 yuriki reduced from 16 to 10 due to instability in dev envs (less resources than cd) -->

    <parameter name="openshift.oc.baseUri" value="OPENSHIFT_OC_BASEURI" />
    <parameter name="openshift.oc.project.name" value="OPENSHIFT_OC_PROJECT_NAME" />
    <parameter name="openshift.oc.project.token" value="OPENSHIFT_OC_PROJECT_TOKEN" />

    <parameter name="care.isSimulator" value="CARE_ISSIMULATOR" />

    <!-- Enable to see more logs in console | Format : [RESULT] flowName | stepName | <status> -->
    <parameter name="test.log.debug" value="true" />

    <parameter name="redbrick.isEnabled" value="false"/><!-- due to extreme time take to create report-->

    <suite-files>
        <suite-file path="AutomationConfiguration_APIGW_testng.xml"/>
    </suite-files>

    <!--<listeners>
        <listener class-name="com.amdocs.corereport.listener.testng.incidentController.v1.listener.TestNGIncidentControllerListener"/>
    </listeners>-->

    <!-- report portal crushing <listeners>
        <listener class-name="com.amdocs.corereport.listener.testng.reportPortal.v1.listener.TestNGReportPortalListener"/>
    </listeners>-->

    <parameter name="oc.service.pi-factory-service.POST/productInventoryManagement/v4/product/applyProductFromOrder.headers" value="x-api-logger:payload"/>
    <parameter name="redbrick.isEnabled" value="false" /><!-- due to extreme time take to create report-->

    <test name="Automation Setup" parallel="methods" thread-count="10">
        <classes>
            <class name="com.amdocs.core.oc.test.automationSetup.OrderCaptureAutomationSetup" />
        </classes>
    </test>

    <test name="NegotiateMobilePhoneNumberViaCartRetail">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.mobile.postpaid.negotiate.updateCharacteristic.NegotiateMobilePhoneNumberViaCartRetail" />
        </classes>
    </test>

    <test name="NegotiateQuadruplePlayTC001ViaCartRetail">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.multiplay.negotiate.quadruple.retail.NegotiateQuadruplePlayTC001ViaCartRetail" />
        </classes>
    </test>

    <test name="POResumePostpaidMobileOffer">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.productOrder.negotiate.mobile.resume.POResumePostpaidMobileOffer" />
        </classes>
    </test>

    <test name="CROSS53079TC01FlowChangeOwnershipwithfee">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.regressionRefactordFlows.CROSS53079TC01FlowChangeOwnershipwithfee" />
        </classes>
    </test>

    <test name="NegotiateResumeMobileOfferWithoutFeeRetail">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.mobile.postpaid.negotiate.resume.retail.NegotiateResumeMobileOfferWithoutFeeRetail" />
        </classes>
    </test>

    <test name="NegotiateReplaceMobileOfferWithDeviceAddOnAccessoryViaCartRetail">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.mobile.postpaid.negotiate.replace.retail.NegotiateReplaceMobileOfferWithDeviceAddOnAccessoryViaCartRetail" />
        </classes>
    </test>

    <test name="CROSS28528TC002MoveMultiplayQuadPlus">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.move.CROSS28528TC002MoveMultiplayQuadPlus" />
        </classes>
    </test>

    <test name="POReestablishPostpaidMobileOffer">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.productOrder.negotiate.mobile.reestablish.POReestablishPostpaidMobileOffer" />
        </classes>
    </test>

    <test name="NegotiateReestablishPostpaidMobileOfferWithFeeViaCartRetail">
        <classes>
            <class name="com.amdocs.core.oc.test.flows.mobile.postpaid.negotiate.reestablish.retail.NegotiateReestablishPostpaidMobileOfferWithFeeViaCartRetail" />
        </classes>
    </test>

</suite>